<%= render 'navigation' %>

<div class="container">
	<div class="row">
		
	<h3>Edit Cat Data</h3>
	<%= form_with model: @cats do |f| %>

	<div class="form-group">
		<%= f.label :Name %>
		<%= f.text_field :name, class:'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :Breed %>
		<%= f.text_field :breed, class:'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :Age %>
		<%= f.text_field :age, class:'form-control' %>

	</div>
	
	<%= f.submit 'Update', class:'btn btn-info' %>	
	<% end %>	
	</div>
</div>
